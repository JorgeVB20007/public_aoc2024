<html>

<head>
    <title>AoC 42 - Ranking</title>
    <link rel="icon" type="image/x-icon" href="/faviconaoc.ico">
    <link rel="stylesheet" type="text/css" href="/styles.css">
</head>

<body>
    <!-- ?  HEADER -->
	<div class="custom-header">
        <div class="custom-logo-div" style="height: 200px; overflow-y: unset;">
            <iframe class="custom-logo-long" src="/42.html" allowTransparency="true" scrolling="no" frameborder="0" style="width:50vw; height: 200px; overflow-y: unset;"></iframe>
            <iframe class="custom-logo-short" src="/42short.html" allowTransparency="true" scrolling="no" frameborder="0" style="width:66vw; height: 220px; overflow-y: unset;"></iframe>
        </div>
        <div style="display: flex; flex-direction: row; align-items: center; width:50vw; margin: auto; text-align: center; justify-content: center;">
            <a href=<%= langkit["header"]["register_href"] %> style="width:max-content"> [<%= langkit["header"]["register"] %>] </a>
            <span style="margin: 1%;"> · </span>
            <a href=<%= langkit["header"]["faqs_href"] %> style="width:max-content"> [<%= langkit["header"]["faqs"] %>] </a>
            <span style="margin: 1%;"> · </span>
            <a href=<%= langkit["header"]["ranking_href"] %> style="width:max-content"> [<%= langkit["header"]["ranking"] %>] </a>
            <span style="margin: 1%;"> · </span>
            <div style="display: flex; flex-direction: column; height:fit-content">
                <p style="height: fit-content; margin-block-start: 0em; margin-block-end: 0em;"> <%= langkit["header"]["languages"] %> </p>
                <a href="ca">Català</a>
                <a href="es">Español</a>
                <a href="en">English</a>
            </div>
        </div>
	</div>
    <!-- ?  END OF HEADER -->

    <div class="ranking_main_div" style=<%= ranking_visible_class[0] %> >

        <h1 style="margin: 10px"><em><%= langkit["ranking"] %></em></h1>
        <p style="width: 90vw; margin: 0 auto; text-align: right;">(<span class="star1">*</span>) <%= langkit["completed_in_time"] %> <span class="star-1">·</span> (<span class="star0">*</span>) <%= langkit["completed_delayed"] %> <span class="star-1">·</span> (<span class="star-1">*</span>) <%= langkit["not_completed"] %></p>
        
        <table style="width: 90vw; margin: 0 auto;">
            <tr>
                <th rowspan="2"><em><%= langkit["login"] %></em></th>
                <th rowspan="2"><em><%= langkit["campus"] %></em></th>
                <th rowspan="2"><em><%= langkit["streak"] %></em></th>
                <th rowspan="2"><em><%= langkit["points"] %></em></th>
                <th colspan=<%= current_day %>><em><%= langkit["days"] %></em></th>
            </tr>
            <tr>
                <% all_days.forEach(function(all_days) { %>
                        <th><%= all_days %></th>
                <% }); %>
            </tr>
            <% all_indexes.forEach(function(index) { %>
                <tr>
                    <td><%- all_logins[index] %></td>
                    <td class=<%= "color".concat(all_campuses[index]) %>><%= all_campuses[index] %></td>
                    <td><%= all_streaks[index] %></td>
                    <td><%= all_points[index] %></td>
                    <% all_days.forEach(function(day) { %>
                        <% var str = "star" %>
                        <td><span class=<%= str.concat(all_days_scores[day - 1][index][0]) %> style="margin-block-start: 0px; margin-block-end: 0px; width: fit-content">*</span><span class=<%= str.concat(all_days_scores[day - 1][index][1]) %> style="margin-block-start: 0px; margin-block-end: 0px; width: fit-content">*</span></td>
                    <% }); %>

                </tr>
            <% }); %>

        </table>
    </div>

    <div class="ranking_main_div" style=<%= ranking_visible_class[1] %> >

        <h1 style="margin: 10px"><em><%= langkit["ranking"] %></em></h1>
        <p style="width: 90vw; margin: 0 auto; text-align: right;">(<span class="star1">*</span>) <%= langkit["completed_in_time"] %> <span class="star-1">·</span> (<span class="star0">*</span>) <%= langkit["completed_delayed"] %> <span class="star-1">·</span> (<span class="star-1">*</span>) <%= langkit["not_completed"] %></p>
        
        <div style="width: 90vw; margin: 0 auto; padding-top: 10vh;">
            <p><%= langkit["wrong_title"] %></p>
            <p><%- langkit["wrong_explanation"] %></p>
        </div>
    </div>
</body>

</html>